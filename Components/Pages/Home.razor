@page "/"
@* Daniel added this injection so we can use everwhere in project the PersonService Object *@
@inject PersonService PersonService
@inject NavigationManager Navigation

<h3>Person Form</h3>

<EditForm Model="@PersonService.Person" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @* <div class="form-group">
        <label for="firstName">First Name</label>
        <InputText id="firstName" class="form-control" @bind-Value="PersonService.Person.FirstName" />
    </div>

    <div class="form-group">
        <label for="lastName">Last Name</label>
        <InputText id="lastName" class="form-control" @bind-Value="PersonService.Person.LastName" />
    </div> *@

    <!-- email and password input fields -->

    <div class="form-group">
        <label for="email">E-mail address:</label>
        <InputText id="email" type="email" required placeholder="Enter your email"  
            class="form-control" @bind-Value="PersonService.Person.Email" />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <InputText id="password" type="password" required placeholder="Enter your password"
            class="form-control" @bind-Value="PersonService.Person.Password" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</EditForm>

@code {
   
    private void HandleSubmit()
    {
        // Navigate to the success page after form submission
        Navigation.NavigateTo("/success");
    }
}
