@page "/register"

@inject PersonService PersonService
@inject NavigationManager Navigation
<h3>User Register</h3>

<EditForm Model="@PersonService.Person" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="container mt-4">
        <div class="row">
            <div class="form-group">
                <label for="email">E-mail address:</label>
                <InputText id="email" type="email" required placeholder="Enter your email"
                           class="form-control" @bind-Value="PersonService.Person.Email" />
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <InputText id="password" type="password" required placeholder="Enter your password"
                           class="form-control" @bind-Value="PersonService.Person.Password" />
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="password">First Name:</label>
                <InputText id="fname" type="text" required placeholder="Enter your first nme"
                           class="form-control" @bind-Value="PersonService.Person.FirstName" />
            </div>

            <div class="form-group">
                <label for="password">Last Name:</label>
                <InputText id="lname" type="text" required placeholder="Enter your last name"
                           class="form-control" @bind-Value="PersonService.Person.LastName" />
            </div>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</EditForm>

<style>
    button{
        width: 100px !important;
        margin:15px!important;
    }
    .form-control{
        width: 100% !important;
    }
</style>

@code {

    private void HandleSubmit()
    {
        // Navigate to the success page after form submission
        Navigation.NavigateTo("/thanku");
    }
}